<div class="max-w-3xl mx-auto p-6">
  <h1 class="text-3xl font-bold text-gray-800 mb-4">Member Dashboard</h1>

  <%= link_to "All Books", books_path, class: "inline-block bg-blue-600 text-white px-4 rounded-md hover:bg-blue-700 transition mb-6" %>

  <h2 class="text-xl font-semibold text-gray-700 mb-2">My Borrowed Books</h2>
  <ul class="space-y-3">
    <% @my_books.each do |borrowing| %>
      <li class="bg-white p-4 rounded-lg shadow flex justify-between items-center">
        <div>
          <p class="text-lg font-medium text-gray-800"><%= borrowing.book.title %></p>
          <p class="text-sm text-gray-600">
            Due: <%= borrowing.due_at.strftime("%B %d, %Y") %>
            <% if borrowing.due_at < Date.today %>
              <span class="ml-2 text-red-600 font-semibold">Overdue</span>
            <% end %>
          </p>
        </div>
      </li>
    <% end %>
  </ul>

  <div class="flex justify-end mb-4">
    <%= form_with url: destroy_user_session_path, method: :delete do %>
      <%= submit_tag "Log out", class: "btn btn-danger w-full mt-2" %>
    <% end %>
  </div>
</div>
