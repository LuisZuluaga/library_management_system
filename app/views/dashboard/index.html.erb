<h1>Welcome, <%= current_user.name %></h1>

<% if current_user.librarian? %>
  <h2>Librarian Dashboard</h2>
  <p>Total Books: <%= Book.count %></p>
  <p>Total Borrowed: <%= Borrowing.where(returned_at: nil).count %></p>
  <p>Books Due Today: <%= @due_today.count %></p>

  <h3>Overdue Members</h3>
  <ul>
    <% @overdue_members.each do |member| %>
      <li><%= member.name %> - <%= member.email %></li>
    <% end %>
  </ul>
<% else %>
  <h2>My Borrowed Books</h2>
  <ul>
    <% @my_books.each do |borrowing| %>
      <li>
        <%= borrowing.book.title %> - Due: <%= borrowing.due_at %>
        <% if borrowing.due_at < Date.today %>
          <strong style="color: red;">Overdue</strong>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>
