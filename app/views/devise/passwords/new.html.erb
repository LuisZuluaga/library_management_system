<div class="max-w-md mx-auto mt-12 p-8 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.submit "Send me reset password instructions",
            class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition" %>
    </div>
  <% end %>

  <div class="mt-4 text-center text-sm text-gray-600">
    <%= render "devise/shared/links" %>
  </div>
</div>
